<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.myorg.sample.packaged.webapp">
    <uses-sdk android:minSdkVersion="8"/>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application android:icon="@drawable/icon" android:label="@string/app_name" android:theme="@android:style/Theme.Light">

        <provider
                android:name=".WebAppArchiveFileProvider"
                android:authorities="com.myorg.sample.packaged.webapp"
                android:exported="true"/>

        <provider
                android:name=".BrokenWebAppArchiveFileProvider"
                android:authorities="com.myorg.sample.packaged.webapp.broken"
                android:exported="true"/>

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data android:name="webapp" android:value="packaged" />
        <meta-data android:name="originUrl" android:value="http://wfwalker.github.io/opensun/" />
    </application>
</manifest>
